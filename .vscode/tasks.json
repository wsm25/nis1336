{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cc",
                "-o",
                "${fileDirname}/../bin/schedule",
                "-I",
                "${fileDirname}/../inc",
                "-Wall",
            ],
            "options": {
                "cwd": "${fileDirname}/../bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        },
    ],
    "version": "2.0.0"
}